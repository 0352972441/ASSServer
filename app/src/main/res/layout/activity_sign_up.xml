<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:padding="15dp"
    tools:context=".screen.LoginActivity">
    <TextView
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/mtxTtile"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    <com.google.android.material.textfield.TextInputEditText
        android:textColor="@color/white"
        android:textColorHint="#979595"
        android:layout_below="@id/mtxTtile"
        android:paddingStart="5dp"
        android:background="@null"
        android:drawableStart="@drawable/account"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:id="@+id/medfirstname"
        app:hintAnimationEnabled="true"
        android:hint="First name"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        app:errorEnabled="true"
        tools:ignore="RtlSymmetry">
    </com.google.android.material.textfield.TextInputEditText>
    <com.google.android.material.textfield.TextInputEditText
        android:textColorHint="#979595"
        android:textColor="@color/white"
        android:layout_below="@id/medfirstname"
        android:paddingStart="5dp"
        android:background="@null"
        android:drawableStart="@drawable/account"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:id="@+id/medlastname"
        app:hintAnimationEnabled="true"
        android:hint="Last name"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        app:errorEnabled="true"
        tools:ignore="RtlSymmetry">
    </com.google.android.material.textfield.TextInputEditText>
    <com.google.android.material.textfield.TextInputEditText
        android:textColorHint="#979595"
        android:textColor="@color/white"
        android:layout_below="@id/medlastname"
        android:paddingStart="5dp"
        android:background="@null"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:id="@+id/medemail"
        app:hintAnimationEnabled="true"
        android:hint="email"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        app:errorEnabled="true"
        tools:ignore="RtlSymmetry">
    </com.google.android.material.textfield.TextInputEditText>

    <com.google.android.material.textfield.TextInputEditText
        android:textColorHint="#979595"
        android:textColor="@color/white"
        android:layout_below="@id/medemail"
        android:paddingStart="5dp"
        android:background="@null"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:id="@+id/medpassword"
        android:hint="Password"
        app:passwordToggleEnabled="true"
        android:layout_height="50dp"
        android:inputType="textPassword"
        app:errorEnabled="true">
    </com.google.android.material.textfield.TextInputEditText>
    <com.google.android.material.textfield.TextInputEditText
        android:textColorHint="#979595"
        android:textColor="@color/white"
        android:layout_below="@id/medpassword"
        android:paddingStart="5dp"
        android:background="@null"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:id="@+id/medconfirmpassword"
        app:hintAnimationEnabled="true"
        android:hint="Confirm password"
        android:layout_marginTop="15dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        app:errorEnabled="true"
        tools:ignore="RtlSymmetry">
    </com.google.android.material.textfield.TextInputEditText>
    <Button
        android:background="@color/purple_200"
        android:layout_below="@id/medconfirmpassword"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mbtnLg"
        android:textColor="#ffffffff"
        android:text="Sign Up"/>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_below="@id/mbtnLg"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="right"
                android:layout_marginStart="15dp"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:id="@+id/mtxquestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I haeve an account."
                tools:ignore="SpUsage" />
            <TextView
                android:textColor="@color/purple_200"
                android:layout_marginStart="8dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:id="@+id/mtvchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in"
                tools:ignore="SpUsage" />
        </LinearLayout>
    </RelativeLayout>
    <ProgressBar
        android:visibility="invisible"
        android:background="@color/purple_200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/progrssbar"/>
</RelativeLayout>